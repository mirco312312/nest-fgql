{
  "name": "@mirco312312/nest-fgql",
  "version": "1.0.10",
  "description": "Fast, lightweight GraphQL module to be used in NestJS",
  "author": "Mirco Bartels",
  "license": "MIT",
  "keywords": [
    "nest",
    "nestjs",
    "graphql",
    "graphql-jit",
    "fastify",
    "fastify-gql"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test:integration": "jest --runInBand",
    "test:integration:dev": "jest --runInBand --watch",
    "prerelease": "npm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "9.0.1",
    "@commitlint/config-angular": "9.0.1",
    "@nestjs/common": "7.2.0",
    "@nestjs/core": "7.2.0",
    "@nestjs/platform-fastify": "7.2.0",
    "@nestjs/testing": "7.2.0",
    "@types/jest": "26.0.3",
    "@types/lodash": "^4.14.157",
    "@types/node": "12.12.31",
    "@types/node-fetch": "2.5.7",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "eslint": "7.3.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "reflect-metadata": "0.1.13",
    "release-it": "12.6.3",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "ts-jest": "26.1.1",
    "ts-morph": "^7.1.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.3"
  },
  "dependencies": {
    "fastify-gql": "mirco312312/fastify-gql#feature/keep-alive",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^6.0.11",
    "iterall": "^1.3.0",
    "lodash": "^4.17.15",
    "normalize-path": "^3.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-fastify": "^7.3.2",
    "reflect-metadata": "^0.1.12"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirco312312/nest-fgql.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
